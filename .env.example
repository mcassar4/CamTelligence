LOG_LEVEL=INFO
# Comma-separated camera sources; each entry may be name=source or plain URL/path
CAMERA_SOURCES=
FRAME_POLL_INTERVAL=1.0
QUEUE_SIZE=256

# Motion detection tuning
MOTION_HISTORY=200
MOTION_KERNEL_SIZE=5
MOTION_MIN_AREA=1500
MOTION_DEBUG_DIR=/data/motion_results
MOTION_MAX_FOREGROUND_RATIO=0.1

# YOLO detector settings
YOLO_MODEL_PATH=/app/services/processor/CamT_processor/detector/yolov8s.pt
YOLO_CONF_THRESHOLD=0.4
YOLO_IOU_THRESHOLD=0.45
YOLO_VEHICLE_CONF=0.3
